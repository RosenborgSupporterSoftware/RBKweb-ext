{
  "manifest_version": 2,

  "name": "RBKweb Chrome Extension",
  "description": "Utvidet funksjonalitet for RBKweb.no",
  "version": "0.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": {
    "16": "rbkweb_icon_16.png",
    "32": "rbkweb_icon_32.png",
    "128": "rbkweb_icon_128.png"
  },

  "browser_action": {
    "default_icon": "rbkweb_icon_grey_32.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "<all_urls>"
  ]
}